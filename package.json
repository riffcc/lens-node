{
  "name": "@riffcc/lens-node",
  "version": "0.1.2",
  "description": "A command-line interface for running your Lens node.",
  "repository": {
    "type": "git",
    "url": "https://github.com/riffcc/lens-node"
  },
  "author": "benya7",
  "license": "Apache-2.0",
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "riffcc",
    "lens",
    "peerbit"
  ],
  "type": "module",
  "main": "dist/bin.js",
  "types": "dist/types/bin.d.ts",
  "bin": {
    "lens-node": "./dist/bin.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "tsx watch src/bin.ts",
    "build": "rimraf dist && tsc && chmod +x dist/bin.js",
    "prepublishOnly": "npm run build",
    "start": "node dist/bin.js",
    "release": "pnpm build && (git commit -a -m 'version' || true) && pnpm publish"
  },
  "packageManager": "pnpm@10.6.3",
  "dependencies": {
    "@inquirer/confirm": "^5.1.10",
    "@inquirer/input": "^4.1.10",
    "@inquirer/prompts": "^7.5.1",
    "@riffcc/lens-sdk": "^0.1.4",
    "ajv": "^8.17.1",
    "inquirer": "^12.6.1",
    "peerbit": "^4.1.36",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/node": "^22.15.18",
    "@types/yargs": "^17.0.33",
    "rimraf": "^6.0.1",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@ipshipyard/node-datachannel",
      "better-sqlite3",
      "classic-level",
      "esbuild"
    ]
  }
}
