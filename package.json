{
  "name": "@riffcc/lens-node",
  "version": "0.1.30",
  "description": "A command-line interface for running your Lens node.",
  "repository": {
    "type": "git",
    "url": "https://github.com/riffcc/lens-node"
  },
  "author": "benya7",
  "license": "Apache-2.0",
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "riffcc",
    "lens",
    "peerbit"
  ],
  "type": "module",
  "main": "dist/bin.js",
  "types": "dist/types/bin.d.ts",
  "bin": {
    "lens-node": "./dist/bin.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "tsx watch src/bin.ts",
    "build": "rimraf dist && tsc && chmod +x dist/bin.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:dht": "jest tests/dht-content-routing.test.ts",
    "prepublishOnly": "npm run build",
    "start": "node dist/bin.js",
    "release": "pnpm build && (git commit -a -m 'version' || true) && pnpm publish"
  },
  "packageManager": "pnpm@10.6.3",
  "dependencies": {
    "@chainsafe/libp2p-gossipsub": "^14.1.1",
    "@inquirer/confirm": "^5.1.10",
    "@inquirer/input": "^4.1.10",
    "@inquirer/prompts": "^7.5.1",
    "@libp2p/bootstrap": "^11.0.38",
    "@libp2p/kad-dht": "^15.1.2",
    "@libp2p/record": "^4.0.6",
    "@riffcc/lens-node": "link:",
    "@riffcc/lens-sdk": "^0.1.21",
    "ajv": "^8.17.1",
    "inquirer": "^12.6.1",
    "multiformats": "^13.3.6",
    "peerbit": "^4.1.36",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.15.18",
    "@types/yargs": "^17.0.33",
    "jest": "^29.7.0",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.1.2",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@ipshipyard/node-datachannel",
      "better-sqlite3",
      "classic-level",
      "esbuild"
    ]
  }
}
